@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/MassEffectAndromedaWallpaper.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Pre-Order Now
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Overwatch.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Join the Overwatch Today
                    <!--
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                    -->
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/PunchOut.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Buy Classic Nintendo Games
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/ZeldaBOTW.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Join Link on his Latest Adventure in Hyrule
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row tabStyle">
    <div class="col-md-3 tabStyle">
        <h2 style="text-align: center">PC</h2>
    </div>
    <div class="col-md-3 tabStyle">
        <h2 style="text-align: center">Nintendo</h2>
    </div>
    <div class="col-md-3">
        <h2 style="text-align: center">Playstation</h2>
    </div>
    <div class="col-md-3 tabStyle">
        <h2 style="text-align: center;">Xbox</h2>
    </div>
</div>
