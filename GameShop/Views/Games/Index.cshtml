@model GameShop.Models.GameGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h2 style="margin-bottom: 50px;">Manage Games</h2>

<div class="form-group">
    <form asp-controller="Games" asp-action="Index" method="get">      
        <div class="row">
            <div class="col-lg-1">
                <input type="submit" class="btn btn-info" value="Filter" />
            </div>
            <div class="col-lg-3">
                <input style="width" placeholder="Title" class="form-control" type="text" name="SearchString">
            </div>
            <div class="col-lg-3">
                <select class="form-control" asp-for="gameGenre" asp-items="Model.genres">
                    <option value="">Genre</option>
                </select>
            </div>
            <div class="col-lg-3">
                <select class="form-control" asp-for="gameConsole" asp-items="Model.consoles">
                    <option value="">Console</option>
                </select>
            </div>
            <div class="col-lg-1">
            </div>
        </div>
    </form>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.games[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.games[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.games[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.games[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.games[0].Console)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.games) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Console)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>

</table>

<p>
    <a asp-action="Create">Create New Game</a>
</p>
